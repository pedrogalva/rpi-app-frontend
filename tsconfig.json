
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",        // Diretório de saída para arquivos compilados
    "rootDir": "./src",         // Define a raiz como o diretório base
    "jsx": "react-jsx"
  },
  "include": ["src"],  // Inclui os arquivos dentro de src
  "exclude": ["node_modules", "build"]
}